
<h1 class="title text-info">Listing my projects</h1>

<% @ideas.in_groups_of(3) do |group| %>
  <div class="row">
    <% group.compact.each do |idea| %>
      <div class="col-md-4 text-secondary text-center">
        <%= image_tag idea.picture_url, width: '100%' , height: '70%' if idea.picture.present? %>
        <h4><%= link_to idea.name, idea, class: 'text-info' %></h4>
        <%= idea.description %>
      </div>
    <% end %>
  </div>
<% end %>
